<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/main_blue_light</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
    </style>

    <style name="CustomTextWhite" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomTextBlue" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_blue_dark</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomTextBlueBlack" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/custom_black_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTextBlueDark" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_blue_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonDarkRipple">
        <item name="android:colorControlHighlight">#FFFF0000</item>
        <item name="rippleColor">#FFFF0000</item>
    </style>
</resources>