<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".research.DialogFragmentSearch">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:background="@drawable/research_round_box"/>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/auction_round_money_box_light"
        >
<!--        공 입력 전-->
        <LinearLayout
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/CustomTextBlueDark"
                android:textColor="@color/custom_black"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:text="만약 이 번호로 모든 회차에 구매했다면?" />
        </LinearLayout>

<!--        공 넣기-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ball_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>

<!--        확인 버튼튼-->
       <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/research_search_icon" />
    </LinearLayout>





</RelativeLayout>