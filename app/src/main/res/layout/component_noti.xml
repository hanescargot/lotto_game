<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/noti"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:paddingHorizontal="8dp"
    android:orientation="horizontal"
    android:background="@drawable/box_round_noti"
    android:backgroundTint="@color/light_grey">
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="4dp"
        android:background="@drawable/buy_round_box"
        android:backgroundTint="@color/grey"
        android:src="@drawable/ic_baseline_outlined_flag_24" />
    <TextView
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공지"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/noti_tv"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="안녕하세요. 아주 긴 공지가 있습니다. 읽든지 말든지 하세요."
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:focusable="true"
        android:ellipsize="marquee"
        android:maxLines="@integer/material_motion_duration_long_1"
        />

</LinearLayout>